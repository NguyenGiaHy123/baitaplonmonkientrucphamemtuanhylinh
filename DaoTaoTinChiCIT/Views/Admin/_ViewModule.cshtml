@using DaoTaoTinChiCIT.Models;
@model IEnumerable<DaoTaoTinChiCIT.Models.hocphan>

@{
    var stt = 1;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Danh sách học phần</h3>
</div>
<div class="modal-body">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width: 20px"> STT</th>
                <th style="width: 150px"> Mã học phần</th>
                <th> Tên học phần</th>
                <th style="width: 60px"> Số tín chỉ</th>
                <th class="td-actions" style="width: 40px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(stt++)</td>
                    <td>@item.ma</td>
                    <td>@item.Ten</td>
                    <td style="text-align: center">
                        @foreach (var khp in ViewData["KhungHP"] as List<khung_hp>)
                        {
                            if (khp.hp_id == item.ID)
                            {
                                @khp.sotc
                            }
                        }
                    </td>
                    <td class="td-actions">
                        <a href="#changeTime" class="btn btn-small btn-success open-changeModal" data-id="@item.ID" data-ma="@item.ma" data-tieude="Đặt thời gian khảo sát" data-action="Add" data-toggle="modal"><i class="btn-icon-only fa fa-clock-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Đóng</button>
</div>