@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["CurrentLogin"] != null && Session["Group"].ToString().Contains("1"))
{
    <div class="span3">
        <div class="widget">
            <div class="widget-header">
                <i class="fa fa-check-square"></i>
                <h3>Quản lý đăng ký tín chỉ</h3>
            </div>
            <div class="widget-content">
                <ul>
                    <li><a href="~/Admin/SubscriptionList">Thông tin cá nhân</a></li>
                    <li><a href="~/Admin/UnSubscriptionList">Danh sách thông báo</a></li>
                </ul>
            </div>
        </div>
    </div>

    @RenderBody()
}
else
{
    Response.Redirect("~/Accounts/Index");
}